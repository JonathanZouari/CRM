{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd smart-crm && pip install -r requirements.txt"
  },
  "deploy": {
    "startCommand": "cd smart-crm && gunicorn run:app --bind 0.0.0.0:$PORT --workers 2 --threads 4 --timeout 120",
    "healthcheckPath": "/api/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}
